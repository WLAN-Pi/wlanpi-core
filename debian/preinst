#!/bin/bash
# see: dh_installdeb(1)
# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

if ! ischroot; then
    echo "Stopping wlanpi-core service..."
    deb-systemd-invoke stop wlanpi-core.service || true
    deb-systemd-invoke stop var-log-wlanpi_core-debug.mount || true 
    
    if which nginx >/dev/null 2>&1; then
        echo "Stopping nginx..."
        deb-systemd-invoke stop nginx.service || true
    fi
fi